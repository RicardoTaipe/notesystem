<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="alert alert-info alert-dismissible fade show" role="alert">
      <strong>Sign Up First</strong> to test the app.
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1>Account Login</h1>
      </div>
      <img src="/img/imagen.png" class="rounded-circle mx-auto d-block m-4 logo" alt="Logo">
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Enter an email" autofocus>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Enter a password">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>