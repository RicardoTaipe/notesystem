
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">                                    
                  <input type="text" value="{{title}}"name="title" class="form-control" placeholder="Add a title" autofocus>                                    
                </div>
                <div class="form-group">                  
                  <textarea name="description" class="form-control" placeholder="Add a description">{{description}}</textarea> 
                </div>
                <div class="form-group">
                  <button class="btn tbn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>